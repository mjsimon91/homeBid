<body id="homeContainer">

  <!-- Adding a navbar -->
  {{> nav/nav-block}}

  <br>

  <!-- Add buttons for buyer and seller -->
  <div class="container">
    <div class="row">
      <div class="homeButtons valign-wrapper">
        <a href="./view-listings" class="col s5 waves-effect waves-light btn-large homeChoice">Buy a Home</a>
        <a href="./my-profile/" class="col s5 waves-effect waves-light btn-large homeChoice">Sign In</a>
      </div>
    </div>
  </div>

  <div class="container">
    <form method="get" action="/view-listings">
      <div class="input-field">
        <input placeholder="Enter a city, state or zip code" id="homeScreenSearch" type="search" required>
        <button href="./view-listings" id="searchSubmit" class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>       

</body>
